<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Label" x:Key="TitleLabelStyle">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style TargetType="Label" x:Key="SubheaderLabelStyle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="Button" x:Key="ButtonBaseStyle">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="80"/>
    </Style>
    <Style TargetType="Button" x:Key="OkButtonStyle" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="IsDefault" Value="True"/>
        <Setter Property="Content" Value="OK"/>
    </Style>
    <Style TargetType="Button" x:Key="CancelButtonStyle" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="IsCancel" Value="True"/>
        <Setter Property="Content" Value="Cancel"/>
    </Style>
</ResourceDictionary>